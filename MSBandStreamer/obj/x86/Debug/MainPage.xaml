<Page
    x:Class="MSBandStreamer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MSBandStreamer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:ConnectionId='2' x:Name="StatusText" Text="Connecting..." FontSize="18" Margin="10"/>
            <TextBlock x:ConnectionId='3' x:Name="GSRDisplay" Text="Latest GSR Resistance: ---" FontSize="24" FontWeight="Bold" Margin="10"/>
            <TextBlock x:ConnectionId='4' x:Name="HRDisplay" Text="Latest Heart Rate: ---" FontSize="24" FontWeight="Bold" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>

